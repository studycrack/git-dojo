#!/opt/pwn.college/bash

# 1. Prepare the "remote" â€” a local bare repository
REMOTE=$(bash -c '
REMOTE=/tmp/remote.git
git init --bare "$REMOTE" >/dev/null
git config --global --add safe.directory /tmp/remote.git
echo "$REMOTE"
')

# 2. Prepare the player's local repository
TARGET=$(bash -c '
REPO=/tmp/repo
git init -q "$REPO"
cd "$REPO"
git config user.name  "studycrack"
git config user.email "studycrack@korea.com"

echo "push-me" > important.txt
git add important.txt
git commit -q -m "Init project"
git rev-parse HEAD
')

# 3. Record the target commit for verification
echo "$TARGET" > /challenge/target_commit
echo "$REMOTE" > /challenge/remote_path

chown root:root /challenge/target_commit
chmod 400 /challenge/target_commit
chown root:root /challenge/remote_path
chmod 400 /challenge/remote_path

sudo chown -R hacker:hacker /tmp/repo
