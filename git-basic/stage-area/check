#!/opt/pwn.college/bash

# 检查 /tmp/repo 是否存在且为目录
if [ ! -d /tmp/repo ]; then
    echo "[-] 不要删除 /tmp/repo 文件夹！"
    exit 1
fi

cd /tmp/repo

# 检查 .git 是否存在
if [ ! -d .git ]; then
    echo "[-] 不要删除 .git 文件夹！"
    exit 1
fi

# 检查当前工作区是否包含 app.py
if [ ! -f app.py ]; then
    echo "[-] app.py 不在工作区中！需要从暂存区恢复后再提交。"
    exit 1
fi

if ! diff -q app.py /expected_app.py >/dev/null; then
    echo "[-] app.py 文件内容不正确，不能随便伪造！必须从暂存区恢复原始版本。"
    exit 1
fi

# 检查是否提交了包含 app.py 的提交
if ! git log --pretty=format: --name-only | grep -q "^app.py$"; then
    echo "[-] 没有成功提交 app.py！"
    exit 1
fi

echo "[+] 干得好！你成功恢复并提交了文件！这是你的 flag："
cat /flag
